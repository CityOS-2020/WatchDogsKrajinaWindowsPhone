<Page
    x:Class="WatchDogsKrajina.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WatchDogsKrajina"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <WebView x:ConnectionId='1' x:Name="WebViewControl"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
                                                              
             />

    <Page.BottomAppBar>
        <CommandBar>
            <CommandBar.PrimaryCommands>

                <AppBarButton x:ConnectionId='2'
                    x:Name="SwitchMapBtnTransport"
                    x:Uid="SwitchMapBtn"
                                              
                    Icon="Target"
                    Label="Transport"
                    />
                <AppBarButton x:ConnectionId='3'
                    x:Name="SwitchMapBtnTourist"
                    x:Uid="SwitchMapBtn"
                                                
                    Icon="MapPin"
                    Label="Tourist"
                    />
                <AppBarButton x:ConnectionId='4'
                    x:Name="CenterMapBtn"
                    x:Uid="CenterMapBtn"
                                              
                    Icon="Map"
                    Label="Centriraj"/>
                
            </CommandBar.PrimaryCommands>
            <CommandBar.SecondaryCommands>
                <AppBarButton x:ConnectionId='5'
                    x:Name="DodatneBtn"
                    x:Uid="DodatneBtn"
                                            
                    Label="Dodatne Opcije"/>
            </CommandBar.SecondaryCommands>
        </CommandBar>
    </Page.BottomAppBar>
</Page>

